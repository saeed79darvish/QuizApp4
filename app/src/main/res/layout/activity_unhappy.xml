<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/soccer1"
    tools:context="com.example.saeed.quizapp1.UnhappyActivity">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        style="@style/LinearLayout_Happy_Unhappy"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/unhappy"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_notgood"
            style="@style/TextView_Happy_Unhappy"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView1_Happy_Unhappy"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_restart"
            android:onClick="restart"
            style="@style/Submit_Button_Style"
            />

    </LinearLayout>

</ScrollView>
